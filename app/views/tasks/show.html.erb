<div class="container">
  <div style="width:50%;">
    <h1><%= @task.name %></h1>
    <p class="breadcrumb">Current status : <%= @task.task_type %></p>
    <hr class="solid">
    <p><%= @task.desc %></p>
    <div class="show-buttons">
      <%= link_to "Back", "/tasks", :class => "button"%>
      <div class="flex-row">
        <%= link_to "Update", edit_task_path(@task), :class => "button warning"%>
        <%= link_to "Destroy", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "button delete"%>
      </div>
    </div>
  </div>
</div>
